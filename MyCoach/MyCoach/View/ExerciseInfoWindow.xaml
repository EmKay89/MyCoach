<Window x:Class="MyCoach.View.ExerciseInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCoach.View"
        mc:Ignorable="d"
        Title="ExerciseInfoWindow" Height="450" Width="400" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" BorderThickness="2" BorderBrush="AliceBlue" WindowStyle="None" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown">        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <RichTextBox x:Name="EditTextBox"
                 Margin="13"
                 BorderThickness="0" Grid.ColumnSpan="2"/>
        <Button Style="{StaticResource DefaultButton}"
                HorizontalAlignment="Right"
                Grid.Row="1"
                Content="Schließen"
                IsCancel="True" 
                Click="CloseButton_Click" Grid.Column="1" Margin="0,5,5,5"/>
    </Grid>
</Window>
