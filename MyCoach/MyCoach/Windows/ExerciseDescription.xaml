<Window x:Class="MyCoach.Windows.ExerciseDescription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCoach.Windows"
        mc:Ignorable="d"
        Title="Übungsbeschreibung" Height="250" Width="500" Background="LightGoldenrodYellow" ResizeMode="NoResize">
    <DockPanel Margin="10">
        <Label Content="Bitte geben Sie die Beschreibung der Übung hier ein oder verlinken Sie ein Video:" DockPanel.Dock="Top"/>
        <DockPanel DockPanel.Dock="Bottom" Height="30">
            <Button Content="Speichern"/>
            <Button Content="Schließen"/>
            <Label Background="#FFF1EDD0" Height="10" VerticalAlignment="Top"/>
        </DockPanel>
        <RichTextBox/>
    </DockPanel>
</Window>
