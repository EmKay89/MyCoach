<Window x:Class="MyCoach.Windows.TrainingSchedule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCoach.Windows"
        mc:Ignorable="d"
        Title="Trainingsplan Bearbeiten" Height="450" Width="800" Background="LightGoldenrodYellow" ResizeMode="NoResize">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top">
            <RadioButton x:Name="GenericSchedule" Content="Generischer Trainingsplan (Punkteziel für jeden Monat gleich)" Margin="5" IsChecked="True"/>
            <RadioButton x:Name="TimeBasedSchedule" Content="Zeitbasierter Trainingsplan" Margin="5"/>
        </StackPanel>
        <DockPanel DockPanel.Dock="Bottom" Height="30">
            <Button Content="Speichern" HorizontalAlignment="Left"/>
            <Button Content="Schließen" HorizontalAlignment="Left"/>
            <Label Background="#FFF1EDD0" Height="10" VerticalAlignment="Top"/>
        </DockPanel>
        <Grid>
            <local:TrainingScheduleGeneric/>
            <local:TrainingScheduleTimeBased Visibility="Collapsed"/>
        </Grid>
    </DockPanel>
</Window>
