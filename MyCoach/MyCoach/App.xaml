<Application x:Class="MyCoach.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyCoach"
             StartupUri="Windows\MainWindow.xaml">
    <Application.Resources>
        
        <!-- Base Button Style -->
        <Style TargetType="Button">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#FFF1EDD0"/>
        </Style>

        <!-- Broad Button Style -->
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}" x:Key="BroadButton">
            <Setter Property="Width" Value="120"/>
        </Style>

        <!-- Base Text Box Style -->
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="AliceBlue"/>
        </Style>

        <!-- Broad Text Box Style -->
        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}" x:Key="BroadTextBox">
            <Setter Property="Width" Value="120"/>
        </Style>

        <!-- Base Combobox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="20"/>
        </Style>

        <!-- Broad Combobox Style -->
        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}" x:Key="BroadCombobox">
            <Setter Property="Width" Value="120"/>
        </Style>

        <!-- Base Radio Button Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="AliceBlue"/>
        </Style>

        <!-- Base Check Box Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Background" Value="AliceBlue"/>
        </Style>

    </Application.Resources>
</Application>
